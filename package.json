        "emojis:generate": "bun run utils/emojis.ts",
        "postinstall": "paraglide-js compile --project ./project.inlang --outdir ./paraglide && nuxt prepare",
        "rebuild-i18n": "paraglide-js compile --project ./project.inlang --outdir ./paraglide",
